{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-microsoft-contrib",
    "tslint-consistent-codestyle",
    "tslint-immutable",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "adjacent-overload-signatures": true,
    "array-type": [
      true,
      "generic"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": true,
    "await-promise": true,
    "ban-comma-operator": true,
    "binary-expression-operand-order": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "completed-docs": [
      true,
      {
        "classes": true,
        "enums": true,
        "functions": true,
        "methods": true,
        "properties": {
          "tags": {
            "content": {
              "see": [
                "#.*"
              ]
            },
            "existence": [
              "inheritdoc"
            ]
          }
        }
      }
    ],
    "curly": true,
    "deprecation": {
      "severity": "warn"
    },
    "eofline": true,
    "encoding": true,
    "forin": true,
    "import-name": false,
    "import-spacing": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "insecure-random": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "jsdoc-format": [
      true,
      "check-multiline-start"
    ],
    "label-position": true,
    "linebreak-style": [
      true,
      "LF"
    ],
    "match-default-export-name": false,
    "max-line-length": [
      true,
      140
    ],
    "member-access": [
      true,
      "check-accessor",
      "check-constructor"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "new-parens": true,
    "newline-before-return": false,
    "no-conditional-assignment": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": false,
    "no-boolean-literal-compare": true,
    "no-consecutive-blank-lines": true,
    "no-console": {
      "options": [
        "log"
      ],
      "severity": "error"
    },
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "no-dynamic-delete": true,
    "no-empty": {
      "options": [
        "allow-empty-catch"
      ],
      "severity": "error"
    },
    "no-empty-interface": true,
    "no-eval": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": true,
    "no-import-side-effect": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-inferred-empty-object-type": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-internal-module": true,
    "no-magic-numbers": [
      true,
      -1,
      0,
      1,
      2,
      8,
      10,
      16,
      32
    ],
    "no-misused-new": true,
    "no-multiline-string": false,
    "no-namespace": true,
    "no-non-null-assertion": false,
    "no-object-literal-type-assertion": false,
    "no-parameter-properties": true,
    "no-parameter-reassignment": true,
    "no-redundant-jsdoc": true,
    "no-reference": true,
    "no-relative-imports": false,
    "no-require-imports": true,
    "no-return-await": true,
    "no-shadowed-variable": {
      "options": [{
        "temporalDeadZone": false
      }],
      "severity": "error"
    },
    "no-sparse-arrays": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-submodule-imports": {
      "options": [
        "cq-prolyfill/postcss-plugin",
        "polymer-analyzer/lib/analysis-format/analysis-format"
      ]
    },
    "no-suspicious-comment": {
      "severity": "warn"
    },
    "no-switch-case-fall-through": true,
    "no-this-assignment": true,
    "no-trailing-whitespace": [
      true,
      "ignore-template-strings"
    ],
    "no-unbound-method": [
      true,
      "ignore-static"
    ],
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": [
      true,
      "allow-constructor-only",
      "allow-static-only",
      "allow-empty-class"
    ],
    "no-unnecessary-initializer": true,
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    "no-unsafe-any": false,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-void-expression": true,
    "number-literal-format": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-finally",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true,
        "module-source-path": "full"
      }
    ],
    "prefer-array-literal": false,
    "prefer-conditional-expression": [
      true,
      "check-else-if"
    ],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-function-over-method": [
      true,
      "allow-public",
      "allow-protected"
    ],
    "prefer-method-signature": false,
    "prefer-object-spread": true,
    "prefer-readonly": true,
    "prefer-switch": true,
    "prefer-template": false,
    "prefer-type-cast": false,
    "prefer-while": true,
    "promise-function-async": true,
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "restrict-plus-operands": true,
    "return-undefined": true,
    "semicolon": [
      true,
      "always",
      "strict-bound-class-methods"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always",
        "method": "never",
        "constructor": "never"
      }
    ],
    "space-within-parens": [
      true,
      0
    ],
    "strict-boolean-expressions": true,
    "strict-type-predicates": true,
    "switch-default": true,
    "switch-final-break": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "never",
        "esSpecCompliant": true
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "type-literal-delimiter": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],

    // tslint-immutable
    "readonly-keyword": [true, { "ignore-prefix": ["mutable", "this.mutable"] }],
    "readonly-array": false,
    "no-let": true,
    "no-array-mutation": [true, { "ignore-prefix": ["mutable", "this.mutable"] }],
    "no-object-mutation": [true, { "ignore-prefix": ["mutable", "this.mutable"] }],
    "no-delete": true,
    "no-method-signature": true,
    "no-loop-statement": true
  },
  "rulesDirectory": []
}
